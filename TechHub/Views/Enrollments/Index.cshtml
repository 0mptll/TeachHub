@model IEnumerable<TeachHub.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Learner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Learner.Name)
                </td>
                <td>
                    <a asp-controller="Enrollments" asp-action="Edit" asp-route-courseId="@item.CourseId" asp-route-learnerId="@item.LearnerId">Edit</a>
                    |<a asp-action="Details" asp-route-courseId="@item.CourseId" asp-route-learnerId="@item.LearnerId">Details</a>
                    |<a asp-action="Delete" asp-route-courseId="@item.CourseId" asp-route-learnerId="@item.LearnerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
