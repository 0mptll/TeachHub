@model Course
<div>
    <h4>Course Videos</h4>
    <hr />
    @if (Model.Videos != null && Model.Videos.Any())
    {
        <div class="row">
            @foreach (var video in Model.Videos)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@video.Title</h5>
                            <p class="card-text">Uploaded: @video.UploadedAt.ToString("yyyy-MM-dd HH:mm")</p>
                            <video width="100%" controls>
                                <source src="@video.VideoUrl" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No videos available for this course.</p>
    }
</div>

<div>
    <h4>Course Reviews</h4>
    <hr />
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        <ul class="list-group">
            @foreach (var review in Model.Reviews)
            {
                <li class="list-group-item">
                    <strong>@review.Learner.Name</strong> - @review.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                    <br />
                    <span>@review.Rating/5</span>
                    <p>@review.Content</p>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No reviews available for this course.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CourseId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
