@model TeachHub.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<style>
    .delete-container {
        max-width: 700px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .delete-header {
        font-size: 1.75rem;
        font-weight: 600;
        color: #dc3545;
    }

    .delete-confirmation-text {
        font-size: 1.1rem;
        margin-bottom: 20px;
        color: #6c757d;
    }

    .delete-details dl {
        margin-bottom: 0;
    }

    .delete-details dt {
        font-weight: bold;
        color: #495057;
    }

    .delete-details dd {
        margin-left: 0;
        margin-bottom: 10px;
        color: #343a40;
    }

    .delete-actions {
        margin-top: 30px;
    }

    .delete-actions .btn-danger {
        padding: 10px 20px;
        background-color: #dc3545;
        border: none;
    }

    .delete-actions .btn-danger:hover {
        background-color: #c82333;
    }

    .delete-actions .btn-secondary {
        padding: 10px 20px;
        background-color: #6c757d;
        border: none;
        margin-left: 15px;
    }

    .delete-actions .btn-secondary:hover {
        background-color: #5a6268;
    }

    .delete-note {
        font-size: 0.9rem;
        color: #dc3545;
        margin-top: 15px;
    }
</style>

<div class="delete-container">
    <!-- Page Header -->
    <h1 class="delete-header">Delete Course</h1>

    <!-- Confirmation Text -->
    <p class="delete-confirmation-text">Are you sure you want to delete the following course?</p>

    <!-- Course Details -->
    <div class="delete-details">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Teacher.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Teacher.Name)
            </dd>
        </dl>
    </div>

    <!-- Actions: Delete / Back -->
    <div class="delete-actions">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CourseId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>

    <!-- Warning Note -->
    <p class="delete-note">* This action cannot be undone.</p>
</div>
