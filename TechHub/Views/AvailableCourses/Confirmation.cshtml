@{
    ViewData["Title"] = "Enrollment Confirmation";
}

<h1>Enrollment Successful!</h1>

<h4>Congratulations!</h4>
<p>You have successfully enrolled in <strong>@ViewData["CourseTitle"]</strong>.</p>
<p>We have received your payment of <strong>$@ViewData["Amount"]</strong>.</p>

<p>Thank you for enrolling with us! You can now access the course materials and start learning.</p>

<a href="@Url.Action("Index", "MyEnrollments")" class="btn btn-primary">Go to Available Courses</a>
