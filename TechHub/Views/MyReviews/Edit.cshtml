@model TeachHub.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<style>
    .edit-review-container {
        border: 2px solid #ccc;
        padding: 20px;
        max-width: 600px;
        margin: 50px auto;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .edit-review-container h1, .edit-review-container h4 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .form-group {
        position: relative;
        margin-bottom: 15px;
    }

    .form-group label {
        position: absolute;
        top: -10px;
        left: 10px;
        font-size: 12px;
        background: #f9f9f9;
        padding: 0 5px;
        color: #333;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    button[type="submit"] {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
    }

    .text-danger {
        margin-top: 5px;
        font-size: 0.9em;
    }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }
</style>

<div class="edit-review-container">
    <h1>Edit Review</h1>
    <h4>Update Review Details</h4>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Hidden fields for non-editable properties -->
        <input type="hidden" asp-for="ReviewId" />
        <input type="hidden" asp-for="CreatedAt" />
        <input type="hidden" asp-for="CourseId" />
        <input type="hidden" asp-for="LearnerId" />

        <!-- Editable fields -->
        <div class="form-group">
            <label asp-for="Content" class="control-label">Review Content</label>
            <input asp-for="Content" class="form-control" placeholder="Enter your review content" required />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating" class="control-label">Rating</label>
            <input asp-for="Rating" class="form-control" placeholder="Rate (1-5)" required />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn btn-success" />
        </div>
    </form>
    <div class="back-link">
        <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
    </div>

</div>

@section Scripts {
    @* @await Html.RenderPartialAsync("_ValidationScriptsPartial"); *@
}
