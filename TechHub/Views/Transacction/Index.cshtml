@model IEnumerable<TeachHub.Models.Enrollment>
@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">Create New</a>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Course)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Learner)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Amount)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.TransactionId)</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Course.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Learner.LearnerId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                        <td>@Html.DisplayFor(modelItem => item.TransactionId)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-warning btn-sm mx-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-info btn-sm text-white mx-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-danger btn-sm mx-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
